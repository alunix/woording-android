<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_list_view"
    tools:context="nl.philipdb.wording.ListViewActivity">

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/title"-->
        <!--android:textAppearance="@style/TextAppearance.AppCompat.Headline"-->
        <!--tools:text="List Title"/>-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/word_table"
        android:showDividers="none"
        android:orientation="vertical"
        android:stretchColumns="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_row"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                tools:text="Language 1"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/language_1"/>

            <TextView
                tools:text="Language 2"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/language_2"/>

        </TableRow>

    </TableLayout>

</LinearLayout>
